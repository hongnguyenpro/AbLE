    <!-- Defines an AbLE Layout to be placed at this location in the layout. -->
    <declare-styleable name="AbLE">
        <!-- The path to the annotated layout class containing the view. -->
        <attr name="AbLEclass" format="string" />
        <!-- The drawable or color to show as a placeholder in the layout preview. -->
        <attr name="AbLEpreview" format="color|reference" />
    </declare-styleable>
</resources>
